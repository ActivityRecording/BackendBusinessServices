	<form id="form" name="authorForm">
		<fieldset>
			<legend>Create a new Author</legend>

			<div class="control-group">
				<label for="forename">Forename</label>
				<input type="text" id="forename" ng-model="currentAuthor.forename" ng-minlength="2" ng-minlength="255" required />
			</div>
			<div class="control-group">
				<label for="surname">Surname</label>
				<input type="text" id="surname"	ng-model="currentAuthor.surname" ng-minlength="2" ng-minlength="255" required />
			</div>
			<div class="control-group">
				<label for="id">Id</label>
				<input type="text" id="id" ng-model="currentAuthor.id"  disabled="disabled"/>
			</div>
			<div class="control-group">
				<label>&nbsp;</label>
				<button id="save" ng-click="save()" class="btn">Save</button>
